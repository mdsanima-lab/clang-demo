# Maintain consistent coding style

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
quote_type = double

[*.{commitlintrc,eslint*,js,jsx,json,md,mjs,ts,tsx,versionrc}]
indent_size = 2

[*.{html,yml,yaml}]
indent_size = 2
max_line_length = off

[*.{ps1,psm1,psd1}]
max_line_length = 115

[*.py]
profile = black

[*.{sh,bash,zsh,vim}]
indent_size = 2
max_line_length = 80

[{*.svg,.env*}]
insert_final_newline = false
max_line_length = off

[{CMakeLists.txt,*.{cmake,c,h,cc,hh,cpp,hpp,cxx,hxx}}]
indent_size = 2
max_line_length = 80

[{Makefile,.gitattributes,.gitconfig,.gitcredentials,.gitmessage,.gitmodules}]
indent_size = 8
indent_style = tab
